
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/HPLayOut.cshtml";
}
@using HtmlBlogMSB.Models.ViewModels
@model LoginVM

<h2>Login</h2>
@using(Html.BeginForm()){ 
    @Html.TextBoxFor(x => x.Email , new { @placeholder = "email" });<br />
    @Html.PasswordFor(x => x.Password, new { @placeholder = "password" });<br />
    @Html.Label("Beni Hatırla:") @Html.CheckBoxFor(x => x.RememberMe);<br />
    <input type="submit" name="LogIn" value="Oturum Aç" />
}
<a href="/Account/Register">Kayıt Ol</a>

